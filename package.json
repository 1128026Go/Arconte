    "scripts": {
        "setup": "powershell -ExecutionPolicy Bypass -File scripts/dev/setup.ps1",
        "dev": "powershell -ExecutionPolicy Bypass -File scripts/dev/dev.ps1",
        "dev:all": "scripts/dev/start-all.bat",
        "dev:clean": "powershell -ExecutionPolicy Bypass -File scripts/dev/dev.ps1 -Clean",
        "dev:build": "npm --workspace apps/web run build",
        "stop": "powershell -ExecutionPolicy Bypass -File scripts/dev/dev.ps1 -StopAll",
