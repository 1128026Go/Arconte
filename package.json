        "clean:deep": "powershell -ExecutionPolicy Bypass -File scripts/maintenance/cleanup.ps1 -Deep",
        "test": "cd tests && node test_auth_migration.js",
        "web:dev": "npm --workspace apps/web run dev",
        "web:build": "npm --workspace apps/web run build",
        "web:test": "npm --workspace apps/web run test -- --run",
        "web:coverage": "npm --workspace apps/web run coverage",
        "prod:validate": "bash scripts/production/validate-deployment.sh",
        "prod:build": "bash scripts/production/build.sh",
        "prod:deploy": "bash scripts/production/deploy.sh"
