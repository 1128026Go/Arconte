APP_NAME="Arconte"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

LOG_CHANNEL=stack
LOG_LEVEL=error

# PostgreSQL Production Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=arconte_production
DB_USERNAME=arconte_user
DB_PASSWORD=your_secure_database_password_here

# Redis para cache y sessions (recomendado en producci칩n)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIE=true
CACHE_STORE=redis
QUEUE_CONNECTION=redis

OCR_ENABLED=true

# Gemini AI (producci칩n)
GEMINI_API_KEY=your_production_gemini_api_key_here

# Mail Configuration (Production)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_production_email@gmail.com
MAIL_PASSWORD=your_production_app_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Ingest Service Configuration (Production)
INGEST_BASE_URL=http://127.0.0.1:8001
INGEST_API_KEY=your_production_64_character_hex_key_here

# Sentry Error Tracking (opcional pero recomendado)
SENTRY_LARAVEL_DSN=your_sentry_dsn_here

# AWS S3 para almacenamiento de documentos (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Rate limiting m치s estricto en producci칩n
THROTTLE_LIMIT_PER_MINUTE=60
THROTTLE_LIMIT_AUTHENTICATED=120
